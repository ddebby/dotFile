{
  "workbench.colorTheme": "Community Material Theme Palenight High Contrast",
  "editor.inlineSuggest.enabled": true,
  "python.defaultInterpreterPath": "/Library/Frameworks/Python.framework/Versions/3.9/bin/python3.9",
  "editor.minimap.enabled": false,
  "python.languageServer": "Pylance",
  "tabnine.experimentalAutoImports": true,
  "hediet.vscode-drawio.theme": "automatic",
  "security.workspace.trust.untrustedFiles": "open",
  "window.zoomLevel": 2,
  "[python]": {
      "editor.formatOnType": true
  },
  // vim
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "editor.lineNumbers":"relative",
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindings": [
    {
      "before": ["<leader>", "w"],
      "commands": ["workbench.action.files.save"]
    },
    {
      "before": ["L"],
      "after": ["g", "_"]
    },

    {
      "before": ["H"],
      "after": ["^"]
    },
      {
          "before": ["<leader>", "q"],
          "after": ["%"]
      },
      {
          "before": ["<leader>", "m"],
          "commands": [
              "bookmarks.toggle"
          ]
      },
      {
          "before": ["<leader>", "b"],
          "commands": [
              "bookmarks.list"
          ]
      },
      // run python code
      {
        "before": [
          "leader",
          "p",
          "y"
        ],
        "commands": [
          "workbench.action.files.saveAll",
          {
            "command": "workbench.action.terminal.sendSequence",
            "args": {
              "text": "clear \u000D"
            }
          },
          "workbench.action.terminal.focus",
          {
            "command": "workbench.action.terminal.sendSequence",
            "args": {
              "text": "python '${file}'\u000D"
            }
          },
          "workbench.action.focusActiveEditorGroup"
        ]
      }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
      {
        "before": ["<leader>", "o"],
        "commands": ["workbench.action.toggleAuxiliaryBar"],
      },
      {
        "before": ["<leader>", "o", "o"],
        "commands": ["outline.focus"],
        "when": ["outline.enable"]
      },
      {
        "before": ["<leader>", "e"],
        "commands": ["workbench.view.explorer"],
        "when": "view.Container.workbench.view.explorer.enabled"
      },
      {
        "before": ["<leader>", "p"],
        "commands": ["workbench.action.quickOpen"]
      },
      {
        "before": ["<leader>", "s"],
        "commands": ["workbench.action.gotoSymbol"]
      },
      {
        "before": ["<leader>", "j"],
        "after": ["J"]
      },
      {
        "before": ["<leader>", "/"],
        "commands": [":nohl"]
      },
      {
        "before": ["j"],
        "after": ["g", "j"]
      },
      {
        "before": ["k"],
        "after": ["g", "k"]
      },
      {
        "before": ["J"],
        "after": ["8", "g", "j", "z", "z"],
      },
      {
        "before": ["K"],
        "after": ["8", "g", "k", "z", "z"],
      },
      // -- run
      {
        "before": [
          "<leader>",
          "r"
        ],
        "commands": [
          "workbench.action.files.save",
          "workbench.action.debug.run"
        ]
      },
      {
        "before": [
          "<leader>",
          "d",
          "r"
        ],
        "commands": [
          "workbench.action.files.save",
          "workbench.action.debug.start"
        ]
      },
    ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    },
    {
      "before": ["p"],
      "after": ["p", "g", "v", "y"]
    },
  ],
  "vim.visualModeKeyBindings": [
      {
          "before": [
              ">"
          ],
          "commands": [
              "editor.action.indentLines"
          ]
      },
      {
          "before": [
              "<"
          ],
          "commands": [
              "editor.action.outdentLines"
          ]
      },
  ],
  "vim.sneak": true,
  "vim.useSystemClipboard": true,
  "vim.leader": "<space>",
  "vim.handleKeys": {
      "<C-a>": false,
      "<C-f>": false,
      "<C-n>": false,
      "<C-`>": false,
      "<C-w>": false
  },
  // Others
  "gitlens.mode.active": "zen",
  "workbench.colorCustomizations": {
    "statusBar.background": "#005f5f",
    "statusBar.noFolderBackground": "#005f5f",
    "statusBar.debuggingBackground": "#005f5f"
  },
  "workbench.iconTheme": "material-icon-theme"
}